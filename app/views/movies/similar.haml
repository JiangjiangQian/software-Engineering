-#  This file is app/views/movies/index.html.haml
%h1 Similar Movies

%table#movies
  %thead
    %tr
      %th Title
      %th Rating
      %th Release Date
      %th Director
  %tbody
    - @similar_movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director